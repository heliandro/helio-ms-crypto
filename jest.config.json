{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^@app/(.*)$": "<rootDir>/src/$1"
  },
  "testMatch": ["<rootDir>/tests/**/*.test.ts"],
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "./src/config/"
  ],
  "setupFilesAfterEnv": ["./tests/setup.ts"],
  "globalSetup": "./tests/global-setup.ts",
  "globalTeardown": "./tests/global-teardown.ts"
}
